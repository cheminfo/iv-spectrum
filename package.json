{
  "name": "iv-spectrum",
  "version": "0.14.1",
  "description": "Read different formats and unify the format",
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "types": "./lib/index.d.ts",
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "files": [
    "src",
    "lib",
    "lib-esm"
  ],
  "scripts": {
    "build": "npm run tsc && cheminfo-build -r IVSpectrum",
    "build-doc": "cheminfo doc",
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib lib-esm",
    "eslint": "eslint src --ext ts --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "npm run tsc",
    "test": "npm run test-coverage && npm run eslint && npm run check-types",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs && npm run tsc-esm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "tsc-esm": "tsc --project tsconfig.esm.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/iv-spectrum.git"
  },
  "bugs": {
    "url": "https://github.com/cheminfo/iv-spectrum/issues"
  },
  "homepage": "https://github.com/cheminfo/iv-spectrum#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "dependencies": {
    "common-spectrum": "^0.40.0",
    "ml-regression-simple-linear": "^2.0.3",
    "ml-savitzky-golay": "^5.0.0",
    "ndim-parser": "^0.4.0"
  },
  "devDependencies": {
    "@types/d3-scale": "^4.0.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "cheminfo-build": "^1.1.11",
    "eslint": "^7.32.0",
    "eslint-config-cheminfo-typescript": "^8.0.9",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "react-plot": "^0.10.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  }
}
